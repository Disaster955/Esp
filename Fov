-- FOV.lua
local RunService = game:GetService("RunService")
local fovEnabled = false
local fovValue = 70
local fovConnection

-- Forzar FOV en cada frame
fovConnection = RunService.RenderStepped:Connect(function()
    if fovEnabled and workspace.CurrentCamera then
        workspace.CurrentCamera.FieldOfView = fovValue
    end
end)

-- Funci칩n global para habilitar y cambiar FOV
getgenv().EnableFOV = function(value)
    fovEnabled = true
    fovValue = value or 70 -- solo actualizar el valor, RenderStepped ya est치 activo
end

-- Funci칩n global para deshabilitar FOV
getgenv().DisableFOV = function()
    fovEnabled = false
end

-- Funci칩n de limpieza para unloadRemote
return function()
    fovEnabled = false
end
