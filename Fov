-- FOV.lua
-- Script externo para controlar y forzar el FOV del jugador

local RunService = game:GetService("RunService")
local fovEnabled = false
local fovValue = 70
local fovConnection

-- Funci贸n para forzar FOV
local function enforceFOV()
    if fovConnection then fovConnection:Disconnect() end
    fovConnection = RunService.RenderStepped:Connect(function()
        if fovEnabled and workspace.CurrentCamera then
            workspace.CurrentCamera.FieldOfView = fovValue
        end
    end)
end

-- Funci贸n global para habilitar y cambiar FOV
getgenv().EnableFOV = function(value)
    fovEnabled = true
    fovValue = value or 70
    enforceFOV()
end

-- Funci贸n global para deshabilitar FOV
getgenv().DisableFOV = function()
    fovEnabled = false
    if fovConnection then fovConnection:Disconnect() end
end

-- Retornar funci贸n de limpieza opcional (si se quiere usar con unloadRemote)
return function()
    getgenv().DisableFOV()
end
